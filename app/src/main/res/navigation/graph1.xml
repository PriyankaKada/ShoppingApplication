<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/graph1"
        app:startDestination="@id/mainFragment">

    <fragment
            android:id="@+id/mainFragment"
            android:name="com.android.example.recyclerview.MainFragment"
            android:label="Cities">
        <action
                android:id="@+id/action_mainFragment_to_detailFragment"
                app:destination="@id/detailFragment" />
        <action android:id="@+id/action_mainFragment_to_profileFragment"
                app:destination="@id/profileFragment" />
        <action
                android:id="@+id/action_mainFragment_to_favoritesFragment"
                app:destination="@id/favoritesFragment" />
        <action
                android:id="@+id/action_mainFragment_to_cartFragment"
                app:destination="@id/cartFragment" />
    </fragment>
    <fragment
            android:id="@+id/profileFragment"
            android:name="com.android.example.recyclerview.ProfileFragment"
            android:label="Profile" >
        <action
                android:id="@+id/action_profileFragment_to_favoritesFragment"
                app:destination="@id/favoritesFragment" />
        <action
                android:id="@+id/action_profileFragment_to_cartFragment"
                app:destination="@id/cartFragment" />
    </fragment>

    <fragment
            android:id="@+id/detailFragment"
            android:name="com.android.example.recyclerview.DetailFragment"
            android:label="Details" />

    <fragment
            android:id="@+id/favoritesFragment"
            android:name="com.android.example.recyclerview.FavoritesFragment"
            android:label="Favorites" />

    <fragment
            android:id="@+id/cartFragment"
            android:name="com.android.example.recyclerview.CartFragment"
            android:label="Cart" >
        <action
                android:id="@+id/action_cartFragment_to_mainFragment"
                app:destination="@id/mainFragment" />
    </fragment>
</navigation>
