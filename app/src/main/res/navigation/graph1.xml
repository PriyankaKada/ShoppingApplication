<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/graph1"
        app:startDestination="@id/mainFragment">

    <fragment
            android:id="@+id/mainFragment"
            android:name="com.kioskapp.ryan.MainFragment"
            android:label="Food Items List">
        <action
                android:id="@+id/action_mainFragment_to_detailFragment"
                app:destination="@id/detailFragment" />
        <action android:id="@+id/action_mainFragment_to_profileFragment"
                app:destination="@id/profileFragment" />
    </fragment>
    <fragment
            android:id="@+id/profileFragment"
            android:name="com.kioskapp.ryan.ProfileFragment"
            android:label="Profile" >
        <action android:id="@+id/action_mainFragment_to_profileFragment"
                app:destination="@id/profileFragment" />

        <action
                android:id="@+id/action_profileFragment_to_favoritesFragment"
                app:destination="@id/favoritesFragment" />
        <action
                android:id="@+id/action_profileFragment_to_cartFragment"
                app:destination="@id/cartFragment" />
    </fragment>

    <fragment
            android:id="@+id/detailFragment"
            android:name="com.kioskapp.ryan.DetailFragment"
            android:label="Food Item Details" >
        <action android:id="@+id/action_mainFragment_to_profileFragment"
                app:destination="@id/profileFragment" />
    </fragment>

    <fragment
            android:id="@+id/favoritesFragment"
            android:name="com.kioskapp.ryan.FavoritesFragment"
            android:label="Favorite Food Items" >
        <action android:id="@+id/action_mainFragment_to_profileFragment"
                app:destination="@id/profileFragment" />

    </fragment>

    <fragment
            android:id="@+id/cartFragment"
            android:name="com.kioskapp.ryan.CartFragment"
            android:label="Cart" >
        <action android:id="@+id/action_mainFragment_to_profileFragment"
                app:destination="@id/profileFragment" />

        <action
                android:id="@+id/action_cartFragment_to_mainFragment"
                app:destination="@id/mainFragment" />
    </fragment>
</navigation>
